{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "C/C++: Launch",
            "type": "cppdbg",
            "request": "launch",
            "program": "${workspaceFolder}/src/main",
            "args": [
                "./input.bin",
			    "./output.bin"
                    ],
            "stopAtEntry": false,
            "cwd": "${workspaceFolder}/src",
            "environment": [],
            "externalConsole": false,
            "MIMode": "lldb",
            "setupCommands": [
                {
                    "description": "Enable pretty-printing for gdb",
                    "text": "-enable-pretty-printing",
                    "ignoreFailures": true
                }
            ]
        }
    ]
}